<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="486.0" prefWidth="668.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
    <fx:define>
        <ToggleGroup fx:id="keySizeGroup"/>
    </fx:define>
    <HBox spacing="10">
        <!-- Radio Buttons for Key Size Selection -->
        <RadioButton fx:id="keySize128" text="128" toggleGroup="$keySizeGroup"/>
        <RadioButton fx:id="keySize192" text="192" toggleGroup="$keySizeGroup"/>
        <RadioButton fx:id="keySize256" text="256" toggleGroup="$keySizeGroup"/>
        <Button fx:id="generateKeyButton" text="Generate Key" onAction="#onGenerateKey"/>
    </HBox>

    <!-- Text Field for Displaying Generated Key -->
    <TextField fx:id="keyDisplayField" editable="false" promptText="Generated key will appear here..." />
  <TextArea fx:id="inputTextArea" promptText="Wpisz tekst tutaj..." />
  <Button onAction="#convertToBinary" text="Konwertuj na binarne" />
  <TextArea fx:id="outputTextArea" editable="false" promptText="Tutaj pojawi siÄ™ tekst binarny..." />
</VBox>
